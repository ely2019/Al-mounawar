                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<dmx-serverconnect id="LoadFournisseur" url="/api/GestionFournisseur/LoadFournisseur"></dmx-serverconnect>
<div class="container mt-5">
    <div class="row">
        <div class="col">
            <div class="card">
                <div class="card-body">

                    <div class="row mb-2">

                        <div class="col-10">
                            <h4 class="card-title fw-bold text-primary">GESTION DES FOURNISSEURS</h4>
                        </div>
                        <div class="me-1 ps-0 pe-0 col-1">
                            <button id="btnAjouter" class="btn fw-bold btn-primary mb-2" dmx-on:click="AjouterFournisseur.toggle()">Ajouter</button>
                        </div>
                    </div>

                    <div class="table-responsive small">
                        <table class="table table-bordered table-hover table-sm">
                            <thead>
                                <tr>
                                    <th class="bg-opacity-75 bg-light-subtle">Id</th>
                                    <th class="bg-light-subtle">Ice</th>
                                    <th class="bg-light-subtle">Name</th>
                                    <th class="bg-light-subtle">Email</th>
                                    <th class="bg-light-subtle">Phone</th>
                                    <th class="bg-light-subtle">Type</th>
                                    <th class="bg-light-subtle">Addresse</th>
                                </tr>
                            </thead>
                            <tbody is="dmx-repeat" dmx-generator="bs5table" dmx-bind:repeat="dvFournisseur.data" id="tableRepeat1">
                                <tr dmx-on:click="data_detail.select(id)" dmx-class:table-primary="id==data_detail.data.id" dmx-on:dblclick="ModifierFournisseur.show()">
                                    <td dmx-text="id" class="bg-opacity-75 text-bg-primary fw-bold"></td>
                                    <td dmx-text="ice"></td>
                                    <td dmx-text="name" class="fw-bold"></td>
                                    <td dmx-text="email"></td>
                                    <td dmx-text="phone"></td>
                                    <td dmx-text="type"></td>
                                    <td dmx-text="adress"></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="row">
                        <div class="col">
                            <ul class="pagination" dmx-dataview="dvFournisseur" dmx-generator="bs5paging">
                                <li class="page-item" dmx-class:disabled="dvFournisseur.page == 1" aria-label="First">
                                    <a href="javascript:void(0)" class="page-link" dmx-on:click="dvFournisseur.first()"><span aria-hidden="true">&lsaquo;&lsaquo;</span></a>
                                </li>
                                <li class="page-item" dmx-class:disabled="dvFournisseur.page == 1" aria-label="Previous">
                                    <a href="javascript:void(0)" class="page-link" dmx-on:click="dvFournisseur.prev()"><span aria-hidden="true">&lsaquo;</span></a>
                                </li>
                                <li class="page-item" dmx-class:active="title == dvFournisseur.page" dmx-class:disabled="!active" dmx-repeat="dvFournisseur.getDataViewPagination(2,1,'...')">
                                    <a href="javascript:void(0)" class="page-link" dmx-on:click="dvFournisseur.select(page)">{{title)}}</a>
                                </li>
                                <li class="page-item" dmx-class:disabled="dvFournisseur.page == dvFournisseur.pages" aria-label="Next">
                                    <a href="javascript:void(0)" class="page-link" dmx-on:click="dvFournisseur.next()"><span aria-hidden="true">&rsaquo;</span></a>
                                </li>
                                <li class="page-item" dmx-class:disabled="dvFournisseur.page == dvFournisseur.pages" aria-label="Last">
                                    <a href="javascript:void(0)" class="page-link" dmx-on:click="dvFournisseur.last()"><span aria-hidden="true">&rsaquo;&rsaquo;</span></a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

